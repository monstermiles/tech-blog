
<div class='row m justify-space-around'>
  <h1 class='mb-5'>Look at this fine tech blog.</h1>
</div>

 <div class='header-2-nav'>
        <nav>
          {{#if logged_in}}
          <a class='profile-btn nav-btn mx-1' href='/profile'>PROFILE</a>
          <button class='no-button nav-btn mx-1' id='logout'>LOGOUT</button>
          {{else}}
          <a class='login-btn nav-btn mx-2' id='login-btn' href="/login">LOGIN</a>
          {{/if}}
        </nav>
      </div>



<div class='row mb-3 justify-space-around each-post'>
  {{#each posts as |post| }}
  <div class="col-md-5 my-5 post-card">
    <div class="row">
      <div class="game-post text-center">
        <a href="/post/{{post.id}}">
          <h2 class='user-posted'>{{post.user.username}}</h2>
        </a>
        <a href="/post/{{post.id}}">
        </a>
        <h6 class='user-post'>
          {{post.post_body}}
        </h6>
        <p class='user-tag'>posted on {{format_date post.date_created}}</p>
      </div>
    </div>
  </div>
  {{/each}}
</div>